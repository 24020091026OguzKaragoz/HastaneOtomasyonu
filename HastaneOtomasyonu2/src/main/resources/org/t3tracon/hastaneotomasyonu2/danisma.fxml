<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.t3tracon.hastaneotomasyonu2.controller.DanismaController" prefWidth="600" prefHeight="400">
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0"/>
            </padding>
            <Button text="Çıkış Yap" onAction="#onCikis" style="-fx-background-color: #ff4444; -fx-text-fill: white;"/>
        </HBox>
    </top>
    <left>
        <VBox spacing="10.0" alignment="TOP_CENTER" prefWidth="250">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Label text="Hasta Kayıt Formu" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <TextField fx:id="adField" promptText="Ad"/>
            <TextField fx:id="soyadField" promptText="Soyad"/>
            <TextField fx:id="tcField" promptText="TC Kimlik No"/>
            <TextArea fx:id="sikayetArea" promptText="Şikayet" prefRowCount="5"/>

            <Button text="Kaydet" onAction="#onKaydet" maxWidth="Infinity"/>
            <Label fx:id="statusLabel"/>
        </VBox>
    </left>
    <center>
        <VBox alignment="CENTER">
            <Label text="Danışma Paneli" style="-fx-font-size: 24px; -fx-text-fill: #cccccc;"/>
        </VBox>
    </center>
</BorderPane>
