<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.t3tracon.hastaneotomasyonu2.controller.DoktorController" prefWidth="800" prefHeight="600">
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0"/>
            </padding>
            <Button text="Çıkış Yap" onAction="#onCikis" style="-fx-background-color: #ff4444; -fx-text-fill: white;"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="hastalarTable">
            <columns>
                <TableColumn fx:id="adSoyadColumn" text="Hasta Adı Soyadı" prefWidth="200"/>
                <TableColumn fx:id="tcColumn" text="TC Kimlik No" prefWidth="150"/>
                <TableColumn fx:id="sikayetColumn" text="Şikayet" prefWidth="400"/>
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem text="Seçili Hastayı Sil" onAction="#onHastaSil"/>
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
    </center>
</BorderPane>
